                                        <form action = "@Url.Action("AgregarPedido", "Cliente")" name = op>

                                
                                    
                                     <label>Total a pagar: $</label><input type = "number" name = "totalproductos" id="totalapagar" step = ".001" disabled /><br />
                                       <br />
                                       <label>Cantidad de productos:</label><input type = "number" name = "total" id="total" step = ".001" disabled />
                                       <br />
                                       <button   type = "submit" class="btn btn-primary btn-block mt-3" id="ProcesarPedido">Pedir</button>


                                
                                        </form>
                            
                                    
                               </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>


</div>

        <script>
             
     var filas=document.querySelectorAll("#Productos tbody tr");
      var total=0;
                      
        var cantidad = 0;
         var productos = 0;
                        
                      filas.forEach(function(e) {
 
                      var columnas=e.querySelectorAll("td");
                 

                   var importe=parseInt(columnas[2].textContent);
                   var cantidad=parseInt(columnas[3].textContent);
     
                    columnas[4].textContent = (importe*cantidad).toFixed(2); 
                                 

                  total+=(cantidad*importe);
                  
                  productos +=cantidad
                 
                  
                 });
                 

                  document.getElementById("totalapagar").value =total;
               
                   document.getElementById("total").value = productos;

                 
                              

     </script>

   

     








