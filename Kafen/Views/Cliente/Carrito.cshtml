             @Html.DisplayFor(modelItem => item.Cantidad)
            
            </td>
            
         
            <td>
                

            </td>

            <td>
             <a href="@Url.Action("AgregarCantidad", "Cliente",  new RouteValueDictionary(new {  id=item.Id   }))" class="article">+</a>


